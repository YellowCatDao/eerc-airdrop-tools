{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "ts-node": {
    "esm": true
  }
}